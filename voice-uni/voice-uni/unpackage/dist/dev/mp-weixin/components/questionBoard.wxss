.question-board-container .questionBoardContainerDefault {
  border-top: 4rpx solid #E5E7E9;
  padding: 60rpx 40rpx;
  background-color: #F2F4F4;
}
.question-board-container .questionBoardContainerExpand {
  padding: 80rpx 40rpx;
}
.question-board-container .expand-control-box {
  text-align: center;
  margin: -32rpx 0 0 0;
}
.question-board-container .question-box {
  font-size: 60rpx;
  text-align: center;
}
.question-board-container .control-container .control-box {
  margin-top: 60rpx;
  height: 172rpx;
}
.question-board-container .control-container .control-box .sound-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .control-box .sound-container .sound-box {
  height: 100rpx;
  width: 100rpx;
  border: 2rpx solid #186A3B;
  border-radius: 50%;
  background-color: #186A3B;
  text-align: center;
  line-height: 100rpx;
}
.question-board-container .control-container .control-box .mic-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .control-box .mic-container .mic-box {
  height: 160rpx;
  width: 160rpx;
  border: 2rpx solid #33c46c;
  border-radius: 50%;
  background-color: #33c46c;
  text-align: center;
  line-height: 160rpx;
}
.question-board-container .control-container .control-box .score-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .control-box .score-container .score-box {
  height: 100rpx;
  width: 100rpx;
  border: 2rpx solid #186A3B;
  border-radius: 50%;
  background-color: #186A3B;
  color: aliceblue;
  text-align: center;
  line-height: 100rpx;
}
.question-board-container .control-container .voice-control-box {
  margin-top: 60rpx;
  height: 172rpx;
}
.question-board-container .control-container .voice-control-box .clear-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .voice-control-box .clear-container .clear-box {
  height: 100rpx;
  width: 100rpx;
  border: 2rpx solid gainsboro;
  border-radius: 50%;
  background-color: gainsboro;
  text-align: center;
  line-height: 100rpx;
}
.question-board-container .control-container .voice-control-box .voice-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .voice-control-box .voice-container .pause-voice-box {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.question-board-container .control-container .voice-control-box .voice-container .pause-voice-box .circle-box {
  position: absolute;
  top: -20rpx;
  bottom: -20rpx;
  left: -20rpx;
  right: -20rpx;
  background: conic-gradient(transparent 0, #33c46c 100%);
  border-radius: 50%;
  animation: recordRotate 1s linear infinite;
}
.question-board-container .control-container .voice-control-box .voice-container .pause-voice-box .circle-box:after {
  content: "";
  width: 16rpx;
  height: 10rpx;
  position: absolute;
  top: 6rpx;
  left: 50%;
  border-radius: 50%;
  background: #33c46c;
  transform: translate(-50%, -6rpx);
}
.question-board-container .control-container .voice-control-box .voice-container .pause-voice-box .circle-box:before {
  content: "";
  position: absolute;
  top: 10rpx;
  bottom: 10rpx;
  left: 10rpx;
  right: 10rpx;
  background-color: #F0F2F5;
  border-radius: 50%;
}
@keyframes recordRotate {
100% {
    transform: rotate(360deg);
}
}
.question-board-container .control-container .voice-control-box .voice-container .pause-voice-box .circle-icon {
  z-index: 10;
}
.question-board-container .control-container .voice-control-box .voice-container .sound-voice-box {
  height: 100rpx;
  width: 100rpx;
  border: 2rpx solid #33c46c;
  border-radius: 50%;
  background-color: #33c46c;
  text-align: center;
  line-height: 100rpx;
}
.question-board-container .control-container .voice-control-box .check-container {
  height: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.question-board-container .control-container .voice-control-box .check-container .check-box {
  height: 100rpx;
  width: 100rpx;
  border: 2rpx solid #33c46c;
  border-radius: 50%;
  background-color: #33c46c;
  text-align: center;
  line-height: 100rpx;
}
