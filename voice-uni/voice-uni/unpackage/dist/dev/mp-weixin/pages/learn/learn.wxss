.learn-progress-container {
  margin: 20rpx 20rpx 20rpx 50rpx;
}
.learn-progress-container .progress-box {
  line-height: 20rpx;
}
.learn-progress-container .progress-text-box {
  height: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
}
.space-container {
  height: 200rpx;
}
.button-container {
  position: fixed;
  left: 50%;
  bottom: 40rpx;
  border-top: 2rpx;
  transform: translate(-50%, 0);
}
.button-container .buttonBoxDisabled {
  width: 560rpx;
  border-radius: 50rpx;
  background-color: #8bd8aa;
  color: white;
  font-size: 30rpx;
}
.button-container .buttonBoxNotDisabled {
  width: 560rpx;
  border-radius: 50rpx;
  background-color: #26ac28;
  color: white;
  font-size: 30rpx;
}
