.course-introduce-container {
  background-color: aliceblue;
  padding: 12px 0;
  font-size: 30rpx;
}
.course-introduce-container .introduce-image-box {
  text-align: center;
}
.course-introduce-container .introduce-image-box .image-box {
  width: 200rpx;
  height: 350rpx;
}
.course-introduce-container .title-text {
  font-weight: bold;
  margin-bottom: 20rpx;
}
.course-container .course-progress-box {
  margin: 10rpx 30rpx 0 30rpx;
}
.course-container .course-box {
  margin: 25px 0 0 20px;
}
.course-container .course-box .course-index-box {
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #2ECC71;
  border-radius: 60rpx;
  background-color: #2ECC71;
  color: aliceblue;
  font-size: 30rpx;
}
.course-container .course-box .course-name-box {
  line-height: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.course-container .course-box .course-icon-box {
  line-height: 60rpx;
}
.space-container {
  height: 200rpx;
}
.button-container {
  position: fixed;
  left: 50%;
  bottom: 40rpx;
  border-top: 2rpx;
  transform: translate(-50%, 0);
}
.button-container .button-box {
  width: 560rpx;
  border-radius: 50rpx;
  background-color: #26ac28;
  color: white;
  font-size: 30rpx;
}
